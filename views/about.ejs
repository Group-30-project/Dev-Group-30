<script>
function toggleMenu() {
  const navLinks = document.querySelector('.nav-links');
  navLinks.style.display = navLinks.style.display === 'flex' ? 'none' : 'flex';
}
window.addEventListener('load', () => {
  document.getElementById('header-img').style.transform = 'translateX(0)';
  document.getElementById('header-img').style.opacity = '1';
  document.getElementById('header-text').style.transform = 'translateX(0)';
  document.getElementById('header-text').style.opacity = '1';
  const sections = document.querySelectorAll('main section');
  const revealOnScroll = () => {
    const triggerBottom = window.innerHeight / 1.2;
    sections.forEach(section => {
      const sectionTop = section.getBoundingClientRect().top;
      if(sectionTop < triggerBottom) section.classList.add('visible');
    });
  };
  revealOnScroll();
  window.addEventListener('scroll', revealOnScroll);
});
</script>
